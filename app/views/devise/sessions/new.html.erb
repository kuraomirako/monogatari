<div class="auth-container">
  <h2 class="auth-title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email, autofocus: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %><br>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "ログインする", class: "form-button" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "auth-link" %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "auth-link" %>
  </div>
</div>